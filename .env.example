# Smart Hostel Issue Tracker - Environment Variables

# Database
MONGODB_URI=mongodb://localhost:27017/hostel_issue_tracker
# For MongoDB Atlas use: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/hostel_issue_tracker

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production-min-32-chars

# Groq AI (for smart category prediction)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Email SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=Smart Hostel <noreply@smarthostel.com>

# File Upload (Cloudinary - optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# App Configuration
NEXT_PUBLIC_APP_NAME=Smart Hostel Issue Tracker
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_NOTES=true
NEXT_PUBLIC_ENABLE_AI_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true
NEXT_PUBLIC_ENABLE_QR_SYSTEM=true
